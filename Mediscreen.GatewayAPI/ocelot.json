{
  "Routes": [

    // Patient API
    {
      "DownstreamPathTemplate": "/api/patients/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "mediscreen.patientapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/patients/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/patients",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "mediscreen.patientapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/patients",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },

    // History API
    {
      "DownstreamPathTemplate": "/api/history/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "mediscreen.historyapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/history/{id}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/history",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "mediscreen.historyapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/history",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },

    // Assessment API
    {
      "DownstreamPathTemplate": "/api/assessment/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "mediscreen.assessmentapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/assessment/{id}",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:80"
  }
}